{
  "name": "SBA Microloan Application",
  "fields": {
    "business_id": {"type": "text", "required": true, "prompt": "Enter the business tax ID", "fallback": "000000", "ai_fillable": true},
    "owner_name": {"type": "text", "required": true, "prompt": "Full legal name of the owner", "ai_fillable": true},
    "owner_gender": {"type": "dropdown", "required": false, "options": ["male", "female", "other"], "ai_fillable": true},
    "annual_income": {"type": "number", "required": true, "ai_fillable": true},
    "business_description": {"type": "textarea", "required": true, "prompt": "Provide a short description of the business", "example": "We manufacture eco-friendly products.", "ai_fillable": true},
    "owner_background": {"type": "textarea", "required": false, "prompt": "Summarize the owner's professional background", "ai_fillable": true},
    "covid_impact": {"type": "textarea", "required": false, "prompt": "Explain how COVID-19 affected operations", "ai_fillable": true},
    "veteran": {"type": "checkbox", "required": false, "ai_fillable": true},
    "branch_of_service": {"type": "text", "required": false, "depends_on": "veteran", "prompt": "Which branch did you serve in?", "fallback": "N/A", "ai_fillable": true, "show_if": "veteran"},
    "tax_document": {"type": "file_upload", "required": true, "expected_file": "tax_return.pdf", "ai_fillable": true}
  },
  "sections": [
    {
      "name": "Additional",
      "fields": {
        "references": {"type": "textarea", "required": false, "ai_fillable": true, "example": "References available upon request."}
      }
    }
  ]
}
