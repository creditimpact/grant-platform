{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Grant Evidence Document Library",
  "type": "object",
  "properties": {
    "version": { "type": "integer" },
    "grants": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "display_name": { "type": "string" },
          "required_documents": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["key", "label", "accept_mime", "examples"],
              "properties": {
                "key": { "type": "string" },
                "label": { "type": "string" },
                "accept_mime": { "type": "array", "items": { "type": "string" } },
                "optional": { "type": "boolean", "default": false },
                "examples": { "type": "array", "items": { "type": "string" } },
                "notes": { "type": "string" }
              }
            }
          }
        },
        "required": ["display_name", "required_documents"]
      }
    }
  },
  "required": ["version", "grants"]
}
