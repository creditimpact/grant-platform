# ===== App =====
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ===== Service URLs (HTTP בפיתוח) =====
ELIGIBILITY_ENGINE_URL=http://localhost:4001
AI_ANALYZER_URL=http://localhost:4000
AI_AGENT_URL=http://localhost:4002

# ===== Secrets =====
JWT_SECRET=supersecretkey

# 👇 אלו השמות שהשרת באמת בודק:
AGENT_API_KEY=dev-agent-key
ELIGIBILITY_ENGINE_API_KEY=dev-engine-key
AI_ANALYZER_API_KEY=dev-analyzer-key

# (אפשר להשאיר גם את AI_AGENT_API_KEY, אבל הוא לא נחוץ ל-server)
OPENAI_API_KEY=your-openai-key-here

# ===== MongoDB (לוקאלי) =====
MONGO_URI=mongodb://localhost:27017/grant-platform

# ===== Flags =====
ENABLE_DEBUG=true
SKIP_DB=false

# 👇 חשוב לפיתוח בלי Vault + להדליק Rate Limit
DISABLE_VAULT=true
ENABLE_RATE_LIMIT=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_WINDOW_SEC=60
SECURITY_ENFORCEMENT_LEVEL=dev
